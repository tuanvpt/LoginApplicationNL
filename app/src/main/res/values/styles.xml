<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadingH4">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="Paragraph">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:lineHeight">@dimen/_18sdp</item>
